<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/item_ad_iv_ad_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/item_ad_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ad_iv_ad_image"
        android:layout_toLeftOf="@+id/item_ad_delete"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/item_ad_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_toRightOf="@+id/item_ad_iv_ad_image"
        android:layout_toLeftOf="@+id/item_ad_delete"
        android:layout_below="@+id/item_ad_url"/>

    <TextView
        android:id="@+id/item_ad_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ad_iv_ad_image"
        android:layout_toLeftOf="@+id/item_ad_delete"
        android:layout_below="@+id/item_ad_click"/>

    <TextView
        android:id="@+id/item_ad_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ad_iv_ad_image"
        android:layout_toLeftOf="@+id/item_ad_delete"
        android:layout_below="@+id/item_ad_status"/>

    <TextView
        android:id="@+id/item_ad_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ad_iv_ad_image"
        android:layout_toLeftOf="@+id/item_ad_delete"
        android:background="@drawable/bg_rectangle"
        android:text="Renew"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_below="@+id/item_ad_expiry"
        />

    <ImageView
        android:id="@+id/item_ad_delete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/delete"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/item_ad_edit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/edit"
        android:layout_below="@+id/item_ad_delete"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>