<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_face_black_36dp" />



    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Home"
        android:textColor="#fff"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/whistle_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_toLeftOf="@+id/profile"
        android:src="@drawable/ic_settings_black_36dp"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/advertisment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rectangle"
        android:drawableLeft="@drawable/advertisment"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Add Advertisment"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/select_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_alignLeft="@+id/advertisment"
        android:text="@string/select_ring"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advertisment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_alignRight="@+id/advertisment"
        android:layout_alignLeft="@+id/advertisment"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash"
            android:textColor="#fff"
            android:textSize="23dp" />

        <ToggleButton
            android:id="@+id/toggleBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:text="Test"
            android:textOff=""

            android:textOn="" />
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rectangle"
        android:drawableLeft="@drawable/alarm"
        android:drawablePadding="10dp"
        android:layout_alignRight="@+id/advertisment"
        android:layout_alignLeft="@+id/advertisment"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Alarm Tone"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/ring_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_tone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rectangle"
        android:drawableLeft="@drawable/headphone"
        android:drawablePadding="10dp"
        android:layout_alignRight="@+id/advertisment"
        android:layout_alignLeft="@+id/advertisment"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Ring Tone"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/music_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ring_tone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rectangle"
        android:drawableLeft="@drawable/music3"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:layout_alignRight="@+id/advertisment"
        android:layout_alignLeft="@+id/advertisment"
        android:paddingRight="30dp"
        android:text="Music"
        android:textColor="#fff"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/record_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_tone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rectangle"
        android:drawableLeft="@drawable/record"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignRight="@+id/advertisment"
        android:layout_alignLeft="@+id/advertisment"
        android:text="Recording                "
        android:textColor="#fff"
        android:textSize="23dp" />


    <LinearLayout
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="54dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"/>

</RelativeLayout>
